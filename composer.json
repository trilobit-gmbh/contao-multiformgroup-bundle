{
    "name": "trilobit-gmbh/contao-multiformgroup-bundle",
    "type": "contao-bundle",
    "description": "Allow dynamic repetition of form groups",
    "keywords": [
        "contao",
        "forms",
        "multiple",
        "repetition",
        "form generator"
    ],
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "trilobit GmbH",
            "homepage": "https://github.com/trilobit-gmbh"
        }
    ],
    "require": {
        "php": "^8.2",
        "contao/core-bundle": "^5.3"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.11",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Trilobit\\ContaoMultiFormGroup\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Trilobit\\ContaoMultiFormGroup\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "php-http/discovery": true
        }
    }
}
